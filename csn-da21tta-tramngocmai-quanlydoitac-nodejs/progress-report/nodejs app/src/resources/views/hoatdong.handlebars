
    <title>Thêm Hoạt Động</title>

 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="/css/app.css">
<body>

    <form id="activityForm">
        <label for="activityDate">Ngày Thực Hiện:</label>
        <input type="text" id="activityDate" name="activityDate" placeholder="Chọn ngày">

        <label for="activityDescription">Hoạt Động:</label>
        <input type="text" id="activityDescription" name="activityDescription" placeholder="Nhập hoạt động">

        <button type="button" onclick="submitForm()">Thêm</button>
    </form>

    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        // Sử dụng Flatpickr
        flatpickr("#activityDate", {
            dateFormat: "d/m/Y",
            enableTime: false, // Nếu bạn muốn bật chọn giờ
            time_24hr: true // Nếu bạn muốn sử dụng định dạng 24 giờ
        });

        function submitForm() {
            // Lấy giá trị từ các trường input
            var activityDate = document.getElementById('activityDate').value;
            var activityDescription = document.getElementById('activityDescription').value;

            // Thực hiện các hành động tương ứng với nút Thêm
            console.log('Ngày Thực Hiện:', activityDate);
            console.log('Hoạt Động:', activityDescription);

            // Có thể thêm logic xử lý khác ở đây, ví dụ: gửi dữ liệu đến máy chủ, lưu trữ vào cơ sở dữ liệu, vv.
        }
    </script>
</body>
</html>
